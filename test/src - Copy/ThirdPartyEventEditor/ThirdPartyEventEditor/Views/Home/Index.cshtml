@model IEnumerable<ThirdPartyEventEditor.Models.ThirdPartyEvent>

@{
    ViewBag.Title = "Third party tool";
}
<div class="all-container">
<div class="container-item">
    <div class="container-item">
        <h1>All events</h1>
    </div>
    @if (@Model?.Count() > 0)
    {
        <div class="events-container">
            @foreach (var eventItem in Model)
            {
                var imageSrc = eventItem.PosterImage ?? @"../../Content/Images/default.jpg";
                <div class="event-item"><a class="title-link" href="/Event/Details/@eventItem.Id"><img class="scale" src="@imageSrc" width="245" height="356"><div class="img-text"><p>@eventItem.Name</p></div></a></div>
            }
        </div>
    }
    else
    {
        <h3>There are no events</h3>
    }
    </div>
</div>
