@model IEnumerable<EventViewModel>
@inject IViewLocalizer Localizer
<link href="~/css/events.css" rel="stylesheet">
    <div class="container-item">
        @if (@Model?.Count() > 0)
        {
            <div class="events-container">
                @foreach (var eventItem in Model)
                {
                    var imageSrc = eventItem.Image ?? @"\default.jpg";
                    <div class="event-item"><a class="title-link" asp-controller="Event" asp-action="Details" asp-route-eventId="@eventItem.Id"><img class="scale" src="@imageSrc" width="245" height="356"><div class="img-text"><p>@eventItem.Name</p></div></a></div>
                }
            </div>
        }
        else
        {
            <h3>@Localizer["There are no events"]</h3>
        }
    </div>

