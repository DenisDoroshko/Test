@inject IViewLocalizer Localizer
@{ 
    Layout = "_AccountCenter";
}
<p class="success-message">@ViewData["SuccessMessage"]</p>
<div class="error-box" asp-validation-summary="All"></div>
<form asp-action="ChangePassword" asp-controller="Account" method="post" class="form">
    <label>@Localizer["Current password"]</label><br />
    <input name="currentPassword" type="password" class="form-box" maxlength="120" /><br />
    <label>@Localizer["New password"]</label><br />
    <input name="newPassword" type="password" class="form-box" maxlength="120" /><br />
    <div class="submit-box"><button type="submit" class="crud-button submit-button">@Localizer["Submit"]</button></div>
</form>
